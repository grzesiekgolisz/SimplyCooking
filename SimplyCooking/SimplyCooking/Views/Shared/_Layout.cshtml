@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title SimplyCooking</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/ckeditor");


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Simply Cooking", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("O nas", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    <li>
                        @using (Html.BeginForm("Index", "Recipes", FormMethod.Get))
    {
                        <input id="SearchString" style="height:32.85px; margin-top:10px; margin-right:5px; float:left;" name="SearchString" placeholder="Podaj nazwę dania:" type="text" value="">
                                          
                    <input class="btn btn-primary" style="float:left; margin-top:10px; " type="submit" value="Szukaj" />
                            if (Request.IsAuthenticated)
                            {
                    <p class="btn-dodaj" style=" float: right;  margin: 10px;">
                        <a href='@Url.Action("Create", "Recipes")' class="btn btn-primary">Dodaj swój przepis</a>
                    </p>
                        }
                    }
                                    </li>
                   
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <center><b><p>&copy; @DateTime.Now.Year - PO DOJCZE CORPORATION</p></b></center>
             
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
